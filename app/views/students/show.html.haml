- model_class = @student.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @student.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), students_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_student_path(@student), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), student_path(@student), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
