- @page_header = 'Edit curricula'

- @scoped_curricula.each do |curriculum|
  .well
    %h2= curriculum
    - curriculum.subjects.each do |subject|

      - if subject.levels.empty?
        %h3
          = subject
          %small= link_to 'View', subject

      - else
        - subjectable_ids = subject.levels.map{ |level| "indicator_#{ level.id }" }
        %h3
          = subject
          = raw subject.levels.map{ |level| "<small>#{ link_to level, level }</small>" }.join(', ')

    %br
    = link_to new_indicators_subject_path(curriculum_id: curriculum.id) do
      = glyph("Add a new subject to #{ curriculum }", 'plus')

.well
  = link_to new_indicators_curriculum_path do
    = glyph('Add a new curriculum', 'plus')
