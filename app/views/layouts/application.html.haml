!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Tools for Teachers"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = stylesheet_link_tag "application", :media => "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)

  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="/") Tools for Teachers
        .navbar-collapse.collapse.navbar-responsive-collapse
          - if current_teacher
            %ul.nav.navbar-nav
              %li
              - Group.all.each do |group|
                - if group == @group
                  %li.active= link_to group.name, group_path(group)
                - else
                  %li= link_to group.name, group_path(group)
          %p.navbar-text.pull-right
            - if current_teacher
              = current_teacher.email
              = link_to "Sign out", destroy_teacher_session_path, :method => :delete
            - else
              = link_to "Sign in", new_teacher_session_path
    .container
      .row
        .col-lg-9
          = bootstrap_flash
          = yield
        .col-lg-3
          .well.sidebar-nav
            %h3 Administration
            %ul.nav.nav-list
              %li= link_to "** New Group **", new_group_path
              %li= link_to "** Students **", students_path
      %footer
        %p &copy; Snap Lab Limited 2015


  /
    Javascripts
    \==================================================
  / Placed at the end of the document so the pages load faster
  = javascript_include_tag "application"
  = yield(:page_javascript) if content_for?(:page_javascript)
