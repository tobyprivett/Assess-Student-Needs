%ul.breadcrumb
  - @indicator.ancestors.reverse_order.each do |indicator|
    %li= link_to_indicator(indicator)
  %li= @indicator

%ul.list-group
  %li.list-group-item
    = bootstrap_form_for(@indicator) do |indicator_f|
      .panel.panel-default
        .panel-heading
          .panel-title.indicator-form
            - if @indicator.parent
              = indicator_f.static_control :parent
            = indicator_f.static_control :name, label: @indicator.friendly_type

        - @indicator.allowable_child_types.map do |child_type|
          = link_to "/indicators_#{ child_type }s/new?parent_id=#{ @indicator.id }",
            class: 'btn' do
            .span.glyphicon.glyphicon-plus
            Add a new #{ child_type }

    %ul.list-group
      = render partial: 'indicator', locals: { collection: @indicator.children }
