- @page_header = link_to_group

%h3
  = @lesson.name
  %small
    = @lesson.lesson_date
%ul.nav.nav-pills
  %li.presentation
    = link_to edit_group_lesson_path(@group, @lesson) do
      .span.glyphicon.glyphicon-cog
      Edit lesson
  %li.presentation
    = link_to group_lesson_report_path(@group, @lesson) do
      .span.glyphicon.glyphicon-print
      Report view
.panel.panel-default
  .panel-heading
    Objectives
  .panel-body
    - @lesson.objectives.each do |objective|
      .objective.well.well-sm
        = objective.indicator.delimited_ancestry_names



= render partial: 'assessments/student', collection: @lesson.students
