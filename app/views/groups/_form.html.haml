= bootstrap_nested_form_for(@group) do |f|
  .panel.panel-default
    .panel-heading
      .panel-title
        = f.text_field :name, label: 'Class name', autofocus: true, wrapper_class: 'name-input'
        = render partial: 'teachers/fields/select_name', locals: { f: f }

  - if @group.new_record?
    = render partial: 'groups/students_fields', locals: { f: f}
  - else
    = f.submit 'Save'
