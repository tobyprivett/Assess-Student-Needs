.row
  .col-xs-6
    %well
      %dl.dl-horizontal.lesson-details
        %dt Teacher
        %dd.lesson-teacher
          %mark #{ lesson.teacher }

        %dt Date
        %dd
          %mark #{ lesson.lesson_date }

        %dt
        %dd.lesson-evaluation
          %br
          %mark= @lesson.evidenced ? 'Evidenced' : 'Teacher judgement'
        %dt Teaching materials
        - @lesson.teaching_materials.each do |teaching_material|
          %dd= link_to teaching_material.file_filename, attachment_url(teaching_material, :file), target: '_blank'

  .col-xs-6
    %well.lesson-notes
      %b Notes
      #{ lesson.notes }
