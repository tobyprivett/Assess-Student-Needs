- model_class = Group.new.class
%h1.page-header=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td
          = link_to t('.students', :default => t("helpers.links.students")), group_students_path(group), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_group_path(group), :class => 'btn btn-mini'

= link_to t('.new', :default => t("helpers.links.new")), new_group_path, :class => 'btn btn-primary'
