%ul.nav.nav-tabs.nav-justified
  %li{ class: "#{ 'active' if activate == :lessons }" }
    = link_to '#lessons', { data: { toggle: 'tab' } } do
      Lessons
  %li{ class: "#{ 'active' if activate == :students }" }
    = link_to '#students', { data: { toggle: 'tab' } } do
      Students
  %li
    = link_to '#judgements', { data: { toggle: 'tab' } } do
      Teacher judgements
  %li.dropdown
    = link_to "#", { class: 'dropdown-toggle', data: { toggle: 'dropdown' } } do
      Settings
      %span.caret
    %ul.dropdown-menu
      %li.edit-group
        = link_to edit_group_path(@group) do
          = glyph('Edit class', 'cog')


.tab-content
  #students.tab-pane{ class: "#{ 'active' if activate == :students }" }
    = render partial: '/groups/students'
  #lessons.tab-pane{ class: "#{ 'active' if activate == :lessons }" }
    = render partial: '/groups/lessons'
  #judgements.tab-pane
    = render partial: '/groups/teacher_judgements'
