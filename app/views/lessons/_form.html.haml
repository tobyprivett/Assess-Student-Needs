%p
  %span.glyphicon.glyphicon-triangle-left
  =link_to 'Lessons', group_lessons_path(@group)

.panel.panel-default
  .panel-heading
    .panel-title
      = @lesson.new_record? ? 'Add a new lesson' : 'Edit lesson'
  .panel-body
    = bootstrap_form_for [@group, @lesson], layout: 'horizontal' do |f|
      = f.date_field :lesson_date, label: 'Date'
      = f.text_field :name,  label: 'Goal'


      = f.submit 'Save'
