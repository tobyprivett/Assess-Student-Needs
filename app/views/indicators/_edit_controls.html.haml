.btn-group
  = link_to edit_indicator_path(@indicator), class: 'btn' do
    %span.glyphicon.glyphicon-cog
    Edit

  - if @indicator.deletable?
    = link_to '#trash', class: 'btn', method: :delete, data: { confirm: 'Are you sure you want to permanently delete this?' } do
      = glyph('Delete', 'trash')

  - @indicator.allowable_child_types.map do |child_type|
    = link_to "/indicators_#{ child_type }s/new?parent_id=#{ @indicator.id }",
      class: 'btn' do
      = glyph("Add a new #{ child_type.to_s.humanize }", 'plus')
