%ul.nav.nav-tabs
  %li{ class: "#{ 'active' if activate == :students }" }
    = link_to '#students', { data: { toggle: 'tab' } } do
      Students
  %li{ class: "#{ 'active' if activate == :lessons }" }
    = link_to '#lessons', { data: { toggle: 'tab' } } do
      Lessons
  %li
    = link_to '#judgements', { data: { toggle: 'tab' } } do
      Teacher judgements
  %li.dropdown
    = link_to "#", { class: 'dropdown-toggle', data: { toggle: 'dropdown' } } do
      Settings
      %span.caret
    %ul.dropdown-menu
      %li.add-lesson
        = link_to new_group_lesson_path(@group) do
          .span.glyphicon.glyphicon-plus
          Lesson
      %li.add-judgement
        = link_to new_group_assessment_path(@group, type_helper: 'TeacherJudgement') do
          .span.glyphicon.glyphicon-plus
          Teacher judgement

      %li.edit-group
        = link_to edit_group_path(@group) do
          .span.glyphicon.glyphicon-cog
          Edit class


.tab-content
  #students.tab-pane{ class: "#{ 'active' if activate == :students }" }
    = render partial: '/groups/students'
  #lessons.tab-pane{ class: "#{ 'active' if activate == :lessons }" }
    = render partial: '/groups/lessons'
  #judgements.tab-pane= render partial: '/groups/teacher_judgements'
