%h1.page-header
  = @lesson.group.name
  %small= @lesson.name


- if @lesson.indicator
  %dl.dl-horizontal

    %dt Level
    %dd #{ @lesson.indicator.level }

    %dt Strand
    %dd #{ @lesson.indicator.key }

    %dt Indicator
    %dd #{ @lesson.indicator.name }

    - if description = @lesson.indicator.description
      %dt Description
      %dd.muted #{ description.gsub("_ ", "<br/>").html_safe }

- if @lesson.lesson_datetime
  %h5
    = @lesson.lesson_datetime.to_s(:full_date)

%br
%table.table.table-striped
  %tbody
    - @lesson_students.each do |lesson_student|
      %tr{ id: "student_score_#{ lesson_student.student_id }" }
        %td= lesson_student.student.name
        %td.scoring
          = form_for lesson_student, remote: true do |lesson_student_f|
            = lesson_student_f.select :score, 1..5, include_blank: true
            = lesson_student_f.text_field :notes
            = lesson_student_f.submit 'Save'
        %td.ticks.hide= render partial: 'lesson_students/ticks', locals: { lesson_student: lesson_student }

    %tr
      %td= link_to "Add Student", new_group_student_path(@lesson.group, lesson_id: @lesson.id)
      %td