- @page_header = 'Pedagogies'


- if @pedagogies.empty?
  .bs-component
    .jumbotron
      %p You don't have any pedagogies yet.
      = link_to new_indicators_pedagogy_path do
        .btn.btn-primary.btn-lg
          = glyph('Add a new pedagogy', 'plus')

- @pedagogies.each do |pedagogy|
  .well.curriculum
    %h2= pedagogy
    - pedagogy.learning_attributes.each do |learning_attribute|
      %h3
        = learning_attribute
        - learning_attribute.learning_skills.each do |learning_skill|
          %small= link_to learning_skill, pedagogy_path(learning_skill)

    - pedagogy.learning_skills.each do |learning_skill|
      %h4= link_to learning_skill, pedagogy_path(learning_skill)
    %br
    = render partial: 'pedagogies/editable', locals: { pedagogy: pedagogy }
