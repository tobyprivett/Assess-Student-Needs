- @page_header = 'Sign in (beta users)'

.col-sm-4
  = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.email_field :email, autofocus: true
    = f.password_field :password, autocomplete: "off"
    = f.check_box :remember_me
    = f.submit 'Sign in'
  %br
  %p= link_to "Forgot your password?", new_password_path(resource_name)
  %br
  %p
    Request a beta account:
    = link_to 'admin@toolsforteachers.org.uk', 'mailto:admin@toolsforteachers.org.uk?subject=Beta%20testing'
.row
