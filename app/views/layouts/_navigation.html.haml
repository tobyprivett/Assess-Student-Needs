- if current_teacher
  %ul.nav.navbar-nav
    %li.dropdown
      = link_to "#", { class: 'dropdown-toggle', data: { toggle: 'dropdown' } } do
        My Classes
        %span.caret
      %ul.dropdown-menu.teacher-groups
        - current_teacher.groups.all.each do |group|
          %li
            = link_to group.name, group
        %li.divider
        %li
          = link_to 'All students', students_path
    %li.dropdown
      = link_to "#", { class: 'dropdown-toggle', data: { toggle: 'dropdown' } } do
        Settings
        %span.caret
      %ul.dropdown-menu.settings
        %li
          = link_to new_group_path do
            .span.glyphicon.glyphicon-plus
            Class
        %li
          = link_to new_student_path do
            .span.glyphicon.glyphicon-plus
            Student
  %ul.nav.navbar-nav.navbar-right
    %li= link_to current_teacher.email, '#'
    %li= link_to "Sign out", destroy_teacher_session_path, :method => :delete
