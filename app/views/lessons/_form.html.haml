= form_for @lesson, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :date, :class => 'control-label', :label => 'Date'
    .controls
      = f.datetime_select :lesson_datetime, :class => 'date_field'
  .control-group
    = f.label :group_id, :class => 'control-label'
    .controls
      = f.select :group_id, Group.all.collect {|g| [ g.name, g.id ] }, { :include_blank => true }, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), lessons_path, :class => 'btn'
