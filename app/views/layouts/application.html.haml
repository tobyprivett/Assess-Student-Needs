!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Assess Student Needs"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Assess Student Needs
          .container.nav-collapse
            - if current_teacher
              %ul.nav
                - Group.all.each do |group|
                  - if group == @group
                    %li.active= link_to group.name, group_path(group)
                  - else
                    %li= link_to group.name, group_path(group)
                %li= link_to "** New Group **", new_group_path
                %li= link_to "** Students **", students_path
            %p.navbar-text.pull-right
              - if current_teacher
                = current_teacher.email
                = link_to "Sign out", destroy_teacher_session_path, :method => :delete
              - else
                = link_to "Sign in", new_teacher_session_path

    .container
      .span11.well
        = render :partial => "shared/flash_messages", :locals => {:flash => flash}
        = yield
    = javascript_include_tag "application"