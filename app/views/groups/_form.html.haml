= bootstrap_nested_form_for(@group) do |f|
  .panel.panel-default
    .panel-heading
      .panel-title
        = f.text_field :name, label: 'Class name'
        = f.select :teacher_id, Teacher.all.map{ |t| [t.name, t.id]}, { selected: current_teacher.id }, { disabled: true }
        = f.select :subject_id, Indicators::Subject.all.map{ |t| [t.name, t.id]}, include_blank: true
  .panel.panel-default
    .panel-heading
      .panel-title
        = f.fields_for :students do |student_f|

          - remove_link_text = glyph("Remove#{ (' ' + student_f.object.name) unless student_f.object.new_record?}", 'trash')

          = student_f.text_field :name,
            label: "Student (#{ student_f.link_to_remove(remove_link_text) })".html_safe
        %p= f.link_to_add glyph('Add a student', 'plus'), :students
        = f.submit 'Save'

%p
.alert.alert-info
  %strong Pending feature:
  Add students from other classes
