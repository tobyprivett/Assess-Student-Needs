%well
  %table.table.no-row-lines
    %tbody
      %tr.active.lesson_subject
        %td.text-muted.col-xs-1 Subject
        %td
          %b #{ @lesson.subject.try(:name) }
      %tr.active.lesson-teacher
        %td.text-muted Teacher
        %td
          %b #{ lesson.teacher }
      %tr.active.lesson-date
        %td.text-muted Date
        %td
          %b #{ lesson.lesson_date }
      %tr.active.lesson-notes
        %td.text-muted Notes
        %td #{ lesson.notes }
